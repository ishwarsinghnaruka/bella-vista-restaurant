generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          String    @default("CUSTOMER")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  orders        Order[]
}

model MenuItem {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  // Changed from Float to Decimal for PostgreSQL
  category    String
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Reservation {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  date      String
  time      String
  guests    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id            String   @id @default(cuid())
  userId        String?
  user          User?    @relation(fields: [userId], references: [id])
  items         String   // JSON string of items
  total         Decimal  // Changed from Float to Decimal
  status        String   @default("pending")
  customerName  String
  customerEmail String
  customerPhone String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}